<?xml version="1.0"?>
<robot name="simple_robot">
  <!-- Robot Base -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.7 0.7 0.3"/>
      </geometry>
      <material name="red">
        <color rgba="0.7 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.7 0.7 0.3"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Virtual links for movement control -->
  <!-- We'll use a Gazebo model plugin for direct velocity control -->

  <!-- Front Laser -->
  <joint name="front_laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_laser"/>
    <origin xyz="0.35 0.0 -0.1" rpy="0 0 0"/>
  </joint>

  <link name="front_laser">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.01"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <gazebo reference="front_laser">
    <sensor type="ray" name="front_laser_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <ray>
        <scan>
          <horizontal>
            <samples>1</samples>
            <resolution>1</resolution>
            <min_angle>0</min_angle>
            <max_angle>0</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.1</min>
          <max>30.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="front_laser_controller" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <namespace>/simple_robot</namespace>
          <remapping>~/out:=front_scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>front_laser</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Rear Laser -->
  <joint name="rear_laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_laser"/>
    <origin xyz="-0.35 0.0 -0.1" rpy="0 0 3.14159"/>
  </joint>

  <link name="rear_laser">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.01"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <gazebo reference="rear_laser">
    <sensor type="ray" name="rear_laser_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <ray>
        <scan>
          <horizontal>
            <samples>1</samples>
            <resolution>1</resolution>
            <min_angle>0</min_angle>
            <max_angle>0</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.1</min>
          <max>30.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="rear_laser_controller" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <namespace>/simple_robot</namespace>
          <remapping>~/out:=rear_scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>rear_laser</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Left Laser -->
  <joint name="left_laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="left_laser"/>
    <origin xyz="0.0 0.35 -0.1" rpy="0 0 1.5708"/>
  </joint>

  <link name="left_laser">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.01"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <gazebo reference="left_laser">
    <sensor type="ray" name="left_laser_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <ray>
        <scan>
          <horizontal>
            <samples>1</samples>
            <resolution>1</resolution>
            <min_angle>0</min_angle>
            <max_angle>0</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.1</min>
          <max>30.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="left_laser_controller" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <namespace>/simple_robot</namespace>
          <remapping>~/out:=left_scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>left_laser</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Right Laser -->
  <joint name="right_laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="right_laser"/>
    <origin xyz="0.0 -0.35 -0.1" rpy="0 0 -1.5708"/>
  </joint>

  <link name="right_laser">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.01"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <gazebo reference="right_laser">
    <sensor type="ray" name="right_laser_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <ray>
        <scan>
          <horizontal>
            <samples>1</samples>
            <resolution>1</resolution>
            <min_angle>0</min_angle>
            <max_angle>0</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.1</min>
          <max>30.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="right_laser_controller" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <namespace>/simple_robot</namespace>
          <remapping>~/out:=right_scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>right_laser</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Gazebo material definitions -->
  <gazebo reference="base_link">
    <material>Gazebo/Red</material>
  </gazebo>

  <gazebo reference="front_laser">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="rear_laser">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="left_laser">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="right_laser">
    <material>Gazebo/Black</material>
  </gazebo>

  <!-- Gazebo plugin for direct velocity control -->
  <gazebo>
    <plugin name="object_controller" filename="libgazebo_ros_planar_move.so">
      <ros>
        <namespace>/simple_robot</namespace>
      </ros>
      <command_topic>cmd_vel</command_topic>
      <odometry_topic>odom</odometry_topic>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
    </plugin>
  </gazebo>
</robot>